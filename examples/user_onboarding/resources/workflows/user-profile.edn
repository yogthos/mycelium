{:id :user-profile
 :doc "Fetch a single user by ID and render their profile page"

 :cells
 {:start
  {:id       :user/fetch-profile-by-id
   :doc      "Extract user-id from path params and fetch profile"
   :schema   {:input  [:map
                        [:http-request [:map
                          [:path-params [:map
                            [:id :string]]]]]]
              :output {:found     [:map
                                    [:profile map?]]
                       :not-found [:map
                                    [:error-type :keyword]
                                    [:error-message :string]]}}
   :requires [:db]}

  :render-profile
  {:id       :ui/render-user-profile
   :doc      "Render a single user profile page"
   :schema   {:input  [:map
                        [:profile [:map
                          [:id :string]
                          [:name :string]
                          [:email :string]]]]
              :output [:map
                        [:html :string]]}
   :requires []}

  :render-error
  {:id       :ui/render-error
   :doc      "Render a styled error page"
   :schema   {:input  [:map]
              :output [:map
                        [:html :string]
                        [:error-status :int]]}
   :requires []}}

 :edges
 {:start          {:found     :render-profile
                   :not-found :render-error}
  :render-profile {:done :end}
  :render-error   {:done :end}}

 :dispatches
 {:start          [[:found     (fn [data] (:profile data))]
                   [:not-found (fn [data] (:error-type data))]]
  :render-profile [[:done (fn [_] true)]]
  :render-error   [[:done (fn [_] true)]]}}
